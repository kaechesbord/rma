<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.Views.SettingItemView"
             x:Name="this">

    <Grid ColumnDefinitions="55, *, Auto" Padding="15,10">
        <Border BackgroundColor="{Binding IconColor, Source={x:Reference this}}" 
                HeightRequest="32" 
                WidthRequest="32" 
                StrokeShape="RoundRectangle 8">
            <Image Source="{Binding Icon, Source={x:Reference this}}" 
                   HeightRequest="20" 
                   WidthRequest="20" />
        </Border>

        <Label Grid.Column="1" 
               Text="{Binding Text, Source={x:Reference this}}" 
               VerticalOptions="Center" 
               FontSize="16" 
               TextColor="Black" 
               Margin="10,0"/>

        <Image Grid.Column="2" 
               Source="chevron_right.png" 
               HeightRequest="12" 
               Opacity="0.3" 
               VerticalOptions="Center"/>
    </Grid>
</ContentView>