<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MauiApp3.Views.CameraPage"
             >
    <Grid BackgroundColor="Black">
        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">

            <Label Text="Kamera se učitava..." 
               TextColor="White" 
               HorizontalOptions="Center" />

            <ActivityIndicator IsRunning="True" Color="Gray" />

            <Image x:Name="PhotoPreview" 
               HeightRequest="300" 
               Aspect="AspectFit" 
               IsVisible="False" />

        </VerticalStackLayout>
    </Grid>
</ContentPage>