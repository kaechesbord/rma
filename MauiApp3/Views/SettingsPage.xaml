<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiApp3.Views"
             x:Class="MauiApp3.Views.SettingsPage"
             BackgroundColor="#F2F2F7" 
            >

    <ScrollView>
        <VerticalStackLayout>

            <Label Text="Settings" 
           HorizontalTextAlignment="Center" 
           VerticalTextAlignment="Center"
           FontAttributes="Bold"
           FontSize="18"
           HorizontalOptions="FillAndExpand" />
            <VerticalStackLayout Padding="0,20" Spacing="20">

            <Border BackgroundColor="White" StrokeThickness="0" Margin="0">
                <Grid Padding="15" ColumnDefinitions="Auto, *, Auto">
                    <Image Source="mystatus.png" 
                           HeightRequest="60" WidthRequest="60" 
                           Aspect="AspectFill"
                           VerticalOptions="Center">
                        <Image.Clip>
                            <EllipseGeometry Center="30,30" RadiusX="30" RadiusY="30" />
                        </Image.Clip>
                    </Image>

                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Margin="15,0">
                        <Label Text="Sabohiddin" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
                        <Label Text="Digital goodies designer - Pixsellz" FontSize="14" TextColor="Gray"/>
                    </VerticalStackLayout>

                    <Image Grid.Column="2" Source="chevron_right.svg" HeightRequest="15" Opacity="0.3" VerticalOptions="Center"/>
                </Grid>
            </Border>

            <Border BackgroundColor="White" StrokeThickness="0">
                <VerticalStackLayout>
                    <local:SettingItemView Icon="star.svg" IconColor="#FFCC00" Text="Starred Messages" />
                    <BoxView HeightRequest="0.5" BackgroundColor="#E5E5E5" Margin="55,0,0,0" />
                    <local:SettingItemView Icon="desktop_icon.svg" IconColor="#00A884" Text="WhatsApp Web/Desktop" />
                </VerticalStackLayout>
            </Border>

            <Border BackgroundColor="White" StrokeThickness="0">
                <VerticalStackLayout>
                    <local:SettingItemView Icon="key_icon.svg" IconColor="#007AFF" Text="Account" />
                    <BoxView HeightRequest="0.5" BackgroundColor="#E5E5E5" Margin="55,0,0,0" />
                    <local:SettingItemView Icon="whatsapp.svg" IconColor="#4CD964" Text="Chats" />
                    <BoxView HeightRequest="0.5" BackgroundColor="#E5E5E5" Margin="55,0,0,0" />
                    <local:SettingItemView Icon="notif.svg" IconColor="#FF3B30" Text="Notifications" />
                    <BoxView HeightRequest="0.5" BackgroundColor="#E5E5E5" Margin="55,0,0,0" />
                    <local:SettingItemView Icon="data.svg" IconColor="#4CD964" Text="Data and Storage Usage" />
                </VerticalStackLayout>
            </Border>

            <Border BackgroundColor="White" StrokeThickness="0">
                <VerticalStackLayout>
                    <local:SettingItemView Icon="help_info.svg" IconColor="#007AFF" Text="Help" />
                    <BoxView HeightRequest="0.5" BackgroundColor="#E5E5E5" Margin="55,0,0,0" />
                    <local:SettingItemView Icon="heart.svg" IconColor="#FF2D55" Text="Tell a Friend" />
                </VerticalStackLayout>
            </Border>

            <Label Text="WhatsApp from Facebook" HorizontalOptions="Center" TextColor="Gray" FontSize="12" Margin="0,10,0,20"/>

        </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>