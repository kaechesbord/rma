<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MauiApp3.Views.StatusPage"
             BackgroundColor="#F2F2F7">
    <Grid RowDefinitions="Auto, *">

        <Grid Grid.Row="0" ColumnDefinitions="*, Auto, *" Padding="15, 10" BackgroundColor="White">
            <Label Grid.Column="0" Text="Privacy" TextColor="#007AFF" FontSize="17" VerticalOptions="Center"/>
            <Label Grid.Column="1" Text="Status" FontAttributes="Bold" FontSize="18" VerticalOptions="Center"/>
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20" Padding="0, 20">

                <Frame BackgroundColor="White" HasShadow="False" CornerRadius="0" Padding="15, 10" BorderColor="Transparent">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnMyStatusTapped" />
                    </Frame.GestureRecognizers>
                    <Grid ColumnDefinitions="60, *, Auto, Auto" ColumnSpacing="15">

                        <Grid Grid.Column="0" WidthRequest="60" HeightRequest="60">
                            <Image Source="mystatus.png" Aspect="AspectFill">
                                <Image.Clip>
                                    <EllipseGeometry Center="30,30" RadiusX="30" RadiusY="30" />
                                </Image.Clip>
                            </Image>
                            <Image Source="add_blue_icon.png" 
                                   HorizontalOptions="End" 
                                   VerticalOptions="End" 
                                   WidthRequest="22" 
                                   HeightRequest="22" />
                        </Grid>

                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                            <Label Text="My Status" FontAttributes="Bold" FontSize="17" />
                            <Label Text="Add to my status" TextColor="Gray" FontSize="14" />
                        </VerticalStackLayout>

                        <ImageButton Grid.Column="2" Source="camera.svg" BackgroundColor="#F0F0F0" 
                                     CornerRadius="17" WidthRequest="34" HeightRequest="34" Padding="8" Margin="0,0,5,0"/>
                        <ImageButton Grid.Column="3" Source="pen.svg" BackgroundColor="#F0F0F0" 
                                     CornerRadius="17" WidthRequest="34" HeightRequest="34" Padding="8"/>
                    </Grid>
                </Frame>

                <VerticalStackLayout>
                    <Label Text="No recent updates to show right now." 
                           TextColor="Gray" 
                           HorizontalOptions="Center" 
                           Margin="0, 40, 0, 0"
                           FontSize="15"/>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>