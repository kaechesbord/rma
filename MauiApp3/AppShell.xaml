<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    Shell.TabBarBackgroundColor="White"
    Shell.TabBarTitleColor="#007AFF"
    Shell.TabBarForegroundColor="#007AFF"
    Shell.TabBarUnselectedColor="#8E8E93"
    x:Class="MauiApp3.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp3"
    Shell.FlyoutBehavior="Disabled"
    xmlns:views="clr-namespace:MauiApp3.Views" 
    Title="MauiApp3">

    <TabBar>
        <Tab Title="Status" Icon="running.svg" Route="StatusPage">
            <ShellContent ContentTemplate="{DataTemplate views:StatusPage}" />
        </Tab>
        <Tab Title="Calls" Icon="phone.svg">
            <ShellContent ContentTemplate="{DataTemplate views:CallsPage}" />
        </Tab>
        <Tab Title="Camera" Icon="camera.svg">
            <ShellContent ContentTemplate="{DataTemplate views:CameraPage}" />
        </Tab>
        <Tab Title="Chats" Icon="chats.svg">
            <ShellContent ContentTemplate="{DataTemplate views:ChatsPage}" />
        </Tab>
        <Tab Title="Settings" Icon="settings.svg">
            <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" />
        </Tab>
    </TabBar>

</Shell>
